<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/ly_revision"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <include
        android:id="@+id/v_goal_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/avatar_item" />

    <TextView
        android:id="@+id/tv_revision_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:text="Titulo"
        app:layout_constraintStart_toEndOf="@id/v_goal_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_revision_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="descripcion"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/v_goal_img"
        app:layout_constraintEnd_toStartOf="@+id/tv_revision_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_revision_title"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_revision_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:text="0 - 20"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>